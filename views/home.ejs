        </section>

        <section>
            <h2>Contact Us</h2>
            <div class="restaurant-info">
                <div>
                    <h3>Contact Information</h3>
                    <p>Email: 21bit064@ietdavv.edu.in</p>
                    <p>Phone: (+91) 977-029-9597</p>
                </div>
                <div>
                    <h3>Location</h3>
                    <p>IET DAVV, INDORE, (M.P)</p>
                    <p>INDIA</p>
                </div>
            </div>
        </section>
        
        <%- include('./components/footer') %>
        <style>
            #notification-box {
                position: fixed;
                bottom: 20px;
                right: 20px;
                width: 300px;
                backdrop-filter: blur(3px);
                border-radius: 20px;
                max-height: 300px;
                overflow-y: auto;
                z-index: 20;
            }
        </style>
        <div id="notification-box"></div>

        <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
        <script src="notification.js"></script>
